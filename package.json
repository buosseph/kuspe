{
	"name": "kuspe",
	"version": "0.1.0-alpha.2",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"author": "Brian Uosseph <brian.uosseph@gmail.com>",
	"license": "MIT",
	"scripts": {
		"clean-lib": "del lib",
		"clean-tests": "del coverage",
		"clean": "yarn clean-lib && yarn clean-tests && del node_modules",
		"prepare": "tsc -b",
		"lint": "eslint src/**/*.ts",
		"test": "jest --coverage"
	},
	"devDependencies": {
		"@types/jest": "24.0.13",
		"@typescript-eslint/eslint-plugin": "1.9.0",
		"@typescript-eslint/parser": "1.9.0",
		"del-cli": "2.0.0",
		"eslint": "5.16.0",
		"husky": "2.3.0",
		"jest": "24.8.0",
		"lint-staged": "8.1.7",
		"ts-jest": "24.0.2",
		"typescript": "3.5.1"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"*.ts": [
				"eslint --fix",
				"git add"
			]
		}
	}
}
